{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@700&family=Modak&family=Paytone+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/_homeStyle.css">
{% endblock %}

{% block content %}
    {% if notConnected.notConnected is defined %}
        <div class="alert alert-danger mt-3 container text-center">{{ notConnected.notConnected }}</div>
    {% endif %}
    <h1 class="text-danger text-center mt-3"> WILD PLAYLIST </h1>
    <h5 class="text-secondary text-center  pb-5">Partage de playlists</h5>
    <h2 class="text-center mt-3 mb-5 ">Les dernières playlists créées</h2>
    <ul>
        {% for playlist in playlists %}
            <li class=" border bg-white border rounded shadow-lg container d-flex flex-column align-items-center
            flex-md-row justify-content-lg-between p-3 mb-5 ">
                <div class=" oneplaylist text-left m-5 text-sm-center">
                    <h5>
                        <a class="list-dec" href="/song/showone/{{ playlist.user_name }}">
                            {{ playlist.user_name |capitalize }} <span>et sa playlist</span>
                        </a>
                    </h5>
                    <p class="mt-5">Sa {{ playlist.qContent }}</p>
                </div>
                <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ playlist.url }}"  class="m-lg-3 " allowfullscreen></iframe>
            </li>
        {% endfor %}
    </ul>
    <div class="diagonal-bg">
        <svg xmlns='http://www.w3.org/2000/svg' width='100%' height='100%'>
            <line x1='100%' y1='0' x2='1' y2='100%' stroke='#ffb121' stroke-width='30%'/>
        </svg>
    </div>

